<h1>Edit director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(model: @director, method: :patch) do |form| %>
  <div>
    <%= form.label :name %>

    <%= form.text_area :name %>
  </div>

  <div>
    <%= form.label :profession %>

    <%= form.text_area :profession, rows: 1 %>
  </div>

  <%= form.button  %>
<% end %>

